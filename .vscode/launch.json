    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "cwd":"${workspaceFolder}/help/redis-js",
            "program": "${workspaceFolder}/help/redis-js/index.js",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon",
            "runtimeExecutable": "nodemon --debug",
            "restart": true,
            "cwd":"${workspaceFolder}/mvc/app",
            "program": "${workspaceFolder}/mvc/app/index.js",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"

        }     ,
        {
            "type": "node",
            "request": "launch",
            "name": "test",
            "restart": true,
            "cwd":"${workspaceFolder}/mvc/core",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "test-dbg"
            ],
            "port": 9229,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"            
        }        

    ]
}